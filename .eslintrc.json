{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "env": {
    "es6": true,
    "node": true
  },
  "ignorePatterns": ["dist", "node_modules", "webpack.config.js"],
  "rules": {
    "id-length": [
      "error",
      {
        "min": 2,
        "exceptions": ["e", "i", "j", "k", "d", "x", "y", "a", "b", "_", "q", "t" ]
      }
    ],
    "@typescript-eslint/semi": [2, "always"],
    "semi": [2, "always"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "object-curly-newline": [
      "error",
      {
        "ImportDeclaration": {
          "minProperties": 5,
          "multiline": true
        }
      }
    ],
    "no-duplicate-imports": [
      "error",
      {
        "includeExports": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": {
          "var": 2,
          "let": 2,
          "const": 3
        },
        "MemberExpression": 1,
        "outerIIFEBody": 1,
        "ObjectExpression": 1
      }
    ],
    "no-undef": "error",
    "no-unused-expressions": "warn",
    "no-unused-vars": "warn",
    "no-useless-constructor": "warn",
    "eqeqeq": "error",
    "no-extend-native": "warn",
    "@typescript-eslint/no-non-null-asserted-optional-chain": "off"
  },
  "globals": {
    "fetch": false,
    "console": false,
    "alert": false,
    "navigator": false,
    "setTimeout": false,
    "window": false,
    "document": false,
    "Promise": false,
    "URL": false,
    "Map": false,
    "Audio": false,
    "GeolocationPosition": false,
    "GeolocationPositionError": false
  }
}