{
  "private": true,
  "description": "Mezzo Forte GeoXp",
  "keywords": [
    "geolocation",
    "audio",
    "webaudio",
    "audio experience",
    "digital humanities",
    "mezzo forte",
    "cultural heritage"
  ],
  "homepage": "https://gitlab.com/mezzo-forte/geoxp#README",
  "bugs": {
    "url": "https://gitlab.com/mezzo-forte/geoxp/-/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/mezzo-forte/geoxp.git"
  },
  "license": "Apache-2.0",
  "contributors": [
    {
      "name": "Giuliano Buratti",
      "email": "gbcode.it@gmail.com"
    },
    {
      "name": "Francesco Cretti",
      "email": "francesco.cretti@gmail.com"
    }
  ],
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "build:clear": "lerna run build:clear",
    "build:example-web": "lerna run build --scope=example-geoxp-web",
    "commitlint": "commitlint --edit",
    "dev": "lerna watch -- lerna run build --since",
    "dev:example-web": "concurrently \"yarn dev\" \"cd examples/web && yarn dev\"",
    "docs": "lerna run typecheck && typedoc --options typedoc.json",
    "lint": "lerna run lint",
    "lint:test": "lerna run lint:test",
    "new-publish": "yarn prepare:publish && lerna publish --no-private",
    "new-version": "lerna version --no-private",
    "prepare": "husky || true",
    "prepare:commit": "yarn typecheck && yarn prettify && yarn lint",
    "prepare:publish": "yarn prepare:commit && yarn test",
    "prettify": "lerna run prettify",
    "prettify:test": "lerna run prettify:test",
    "test": "lerna run test",
    "typecheck": "lerna run typecheck"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "husky": "^9.1.7",
    "lerna": "^8.1.8",
    "prettier": "^3.4.2",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "typedoc": "^0.27.4",
    "typedoc-material-theme": "^1.2.0",
    "typedoc-plugin-extras": "^3.1.0",
    "typedoc-plugin-merge-modules": "^6.1.0",
    "typescript": "^5.4.5"
  }
}
